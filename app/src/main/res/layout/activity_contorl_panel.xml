<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContorlPanelActivity">

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

<!--        neeche wale linear layout ko har page main laga na for wallet-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:text="Your Balance :"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="70dp"
                android:background="@drawable/textviewbg"
                android:gravity="center">
            </TextView>


            <TextView
                android:id="@+id/balance"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="70dp"
                android:background="@drawable/textviewbg"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnpaymenthistory"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Payment History"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:elevation="7dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="228dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btncompletedoffers"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Completed Offers"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:elevation="7dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="228dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnhelpfaq"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Help/FAQ"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:elevation="7dp"
            android:layout_marginTop="80dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="228dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnpaymentthresold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:elevation="7dp"
            android:background="@drawable/border"
            android:text="Payment Threshold"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="228dp" />



    </LinearLayout>
    


</androidx.constraintlayout.widget.ConstraintLayout>